<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
>
  <Dialog
    id="helloDialog"
    title="Hello user"
  >
    <content>
      <core:Icon
        src="sap-icon://hello-world"
        size="8rem"
        class="sapUiMediumMargin"
      />
    </content>
    <beginButton>
      <Button
        text="Ok"
        press="onCloseDialog"
      />
    </beginButton>
  </Dialog>
</core:FragmentDefinition>